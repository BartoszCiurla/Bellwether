        <ScrollViewer VerticalScrollBarVisibility="Auto" VerticalScrollMode="Auto" HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled">
            <RelativePanel>
               
                <StackPanel x:Name="CurrentLanguage" Orientation="Horizontal" RelativePanel.Below="AvailableLanguages">
                   
                </StackPanel>
                <StackPanel RelativePanel.Below="CurrentLanguage">
                    
                </StackPanel>
            </RelativePanel>
        </ScrollViewer>
    </RelativePanel>-->
</Page>
