<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Bellwether">
    
    <Style x:Key="TextBlockBasicFontFamilyAndForeground" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe Print"/>
        <Setter Property="Foreground" Value="#FFFBFBFB"/>
    </Style>
    <Style x:Key="TextBlockMobileFontFamilyAndSizeAndForeground" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBasicFontFamilyAndForeground}" >
        <Setter Property="FontSize" Value="16"/>
    </Style>
    
    <Style x:Key="CategoryName" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBasicFontFamilyAndForeground}">
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>
    <Style x:Key="MobileCategoryName" TargetType="TextBlock" BasedOn="{StaticResource TextBlockMobileFontFamilyAndSizeAndForeground}">
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>
    <Style x:Key="CategoryNameDetail" TargetType="TextBlock" BasedOn="{StaticResource TextBlockBasicFontFamilyAndForeground}">
        <Setter Property="Foreground" Value="#FF8764B8"/>
    </Style>
    <Style x:Key="MobileCategoryNameDetail" TargetType="TextBlock" BasedOn="{StaticResource TextBlockMobileFontFamilyAndSizeAndForeground}">
        <Setter Property="Foreground" Value="#FF8764B8"/>
    </Style>
</ResourceDictionary>
